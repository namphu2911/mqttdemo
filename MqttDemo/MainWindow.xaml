<Window x:Class="App1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MqttDemo"
     
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   
   
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox x:Name="textBox1" Text="TextBox11111" Width="800" BorderBrush="#FF030303" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Grid>

        <Grid Grid.Row="1">
            <Button Content="Button" Width="98" Height="30" FontWeight="Bold" Click="Button_Click"/>
        </Grid>

        <Grid Grid.Row="2">
            <ListBox x:Name="listBox1" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        </Grid>



    </Grid>
</Window>
